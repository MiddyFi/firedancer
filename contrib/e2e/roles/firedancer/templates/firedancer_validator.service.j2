[Unit]
Description=Firedancer Validator
After=network.target

[Service]
ExecStart=/bin/bash -c '{{ fd_bindir }}/{{ fd_bin }} configure init all --config {{ fd_config_file }} && \
    {{ fd_bindir }}/{{ fd_bin }} run --config {{ fd_config_file }}'
ExecStop=/bin/bash -c '{{ fd_bindir }}/{{ fd_bin }} configure fini all --config {{ fd_config_file }}'
Restart=always
RestartSec=10s
